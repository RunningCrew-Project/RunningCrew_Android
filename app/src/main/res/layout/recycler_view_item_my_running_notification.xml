<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/notification_my_running_item">
    <TextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="37dp"

        android:text="3월 6일 21시"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_bold"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/dot_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"

        app:layout_constraintTop_toBottomOf="@id/date_text"
        android:background="@drawable/notification_my_running_item_dot_line" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="A크루 정기러닝"

        app:layout_constraintTop_toBottomOf="@id/dot_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="참여인원 24명"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_medium"
        android:includeFontPadding="false"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/people_num"
        android:text="서울시 광진구"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_medium"
        android:includeFontPadding="false"
        android:layout_marginStart="23dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="러닝 시작 가능"
        android:textSize="12sp"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/notification_my_running_item_bottom_possible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>