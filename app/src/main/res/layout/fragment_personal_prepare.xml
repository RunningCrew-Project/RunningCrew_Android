<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="run.acw.crew.ui.history.personal.PersonalPrepareFragment">

    <LinearLayout
        android:id="@+id/personal_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/personal_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:background="@color/transparent"
            android:src="@drawable/backbutton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center_vertical"
            android:text="@string/title_personal_run"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_title">

        <LinearLayout
            android:id="@+id/personal_prepare_input_kilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="126dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="5"
                    android:inputType="numberDecimal"
                    android:textSize="80sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="80sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="00"
                    android:inputType="numberDecimal"
                    android:textSize="80sp" />


            </LinearLayout>

            <View
                android:layout_width="175dp"
                android:layout_height="3dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_medium"
                android:text="@string/personal_prepare_kilometer"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="132dp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/notosans_bold"
                android:text="@string/personal_prepare_start_btn"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>


    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>